<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LinguaVerse_App.MainPage"
             xmlns:local="clr-namespace:LinguaVerse_App.ViewModels">

    <ContentPage.BindingContext>
        <local:QuizViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <!-- Quiz section -->
            <CollectionView ItemsSource="{Binding Questions}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="5">
                            <Label Text="{Binding QuestionText}" />
                            <Picker ItemsSource="{Binding Choices}" SelectedItem="{Binding Answer}" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Check Answers button -->
            <Button Text="Check" Command="{Binding CheckAnswersCommand}" HorizontalOptions="Fill" />

            <!-- Result label -->
            <Label Text="{Binding Result}" HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
